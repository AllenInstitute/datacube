                "persist": ["projection_flat", "is_projection_flat", "ccf_structure_flat", "ccf_structures_flat"]
            }
        ],
        "arguments": ["--data-src", "$DATACUBE_DATA_SOURCE", "--internal", "--data-dir", "./conn_data/", "--data-name", "connectivity", "--resolution", "100"]
    },
    {
        "name": "mouse_ccf",
        "enabled": true,
        "auto-generate": true,
