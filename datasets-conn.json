[
    {
        "name": "connectivity",
        "enabled": true,
        "auto-generate": true,
        "script": "./scripts/datasets/connectivity.py",
        "data-dir": "./conn_data/",
        "files": [
            {
                "path": "connectivity.zarr.lmdb",
                "use_chunks": true,
                "chunks": {"experiment": 20},
                "max_cacheable_bytes": 104857600,
