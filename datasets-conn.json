        "files": [
            {
                "path": "mouse_ccf.nc",
                "use_chunks": false,
                "chunks": {"left_right": 100, "anterior_posterior": 100, "superior_inferior": 100}
            }
        ],
        "arguments": ["--data-src", "$DATACUBE_DATA_SOURCE", "--data-dir", "./mouse_ccf_data/", "--data-name", "mouse_ccf", "--resolution", "25"]
